<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id ="error_explanation">
      <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <%= render 'books/side', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image_icon.jpg" %></br><%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td id="favorite-btn_<%= @book.id %>">
            <%= render 'favorites/favorite-btn', book: @book %>
            </td>
            <td>
              コメント数:<%= @book.book_comments.count %>
            </td>
            <td>
            <div id="star-rate-<%= @book.id %>"></div>
            <script>
              $('#star-rate-<%= @book.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= @book.rate %>,
              });
            </script>
            </td>
            <td>
              閲覧数:<%= @book.view_counts.count %>
            </td>
            <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
        <div id = "comments_area">
        <%= render 'book_comments/index', book_comments: @book_comments %>
        </div>
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>