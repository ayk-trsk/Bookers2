<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <%= render 'layouts/errors', obj: @book %>
  <div class="row">
    <%= render 'books/side', user: @user %>
    <div class="col-md-8 offset-md-1">
      <%= link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %>
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image_icon.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>フォロー数:<%= user.following_user.count %></td>
            <td>フォロワー数:<%= user.follower_user.count %></td>
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %></td>
              <% else %>
                <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %></td>
              <% end %>
            <% else %>
              <td colspan="1"></td>
            <% end %>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>